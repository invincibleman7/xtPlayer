<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 连框1 -->
    <item>
        <shape>
            <corners
                android:topLeftRadius="6px"
                android:bottomLeftRadius="6px"
                android:topRightRadius="6px" 
                android:bottomRightRadius="6px"/>
				
            <solid android:color="#666666" />
        </shape>
    </item>

    <!-- 连框 2 -->
    <item android:top="2px">
        <shape>
            <corners
                android:topLeftRadius="7px"
                android:bottomLeftRadius="7px"
                android:topRightRadius="7px" 
                android:bottomRightRadius="7px"/>

            <solid android:color="#bdb76b" />
        </shape>
    </item>

    <!-- 主体 -->
    <item android:top="3px">
        <shape android:shape="rectangle" >
            <corners
               android:topLeftRadius="10px"
                android:bottomLeftRadius="10px"
                android:topRightRadius="10px" 
                android:bottomRightRadius="10px"/>
            
            <gradient
                android:angle="270"
                android:startColor="#ffffffff"
                android:centerColor="#00bfff"
                android:endColor="#bdb76b" />
        </shape>
    </item>

</layer-list>